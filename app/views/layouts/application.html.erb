<!DOCTYPE html>
<html>
  <head>
    <title>Campo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="side-nav">
      <div class="side-nav-header">
        <div class="brand">
          Campo
        </div>
      </div>
      <div class="side-nav-body">
        <div class="list">
          <a class="list-item active" href="#">active</a>
          <% 30.times do %>
          <a class="list-item" href="#">item</a>
          <% end %>
        </div>
      </div>
      <div class="side-nav-footer">
        Footer
      </div>
    </nav>
    <main>
      <div class="toolbar">
        <div class="toolbar-title">
          Toolbar
        </div>
      </div>
      <div class="main-content">
        <%= yield %>
      </div>
      <div>
        <% if Current.user %>
          <%= Current.user.name %>
          <%= link_to 'sign out', session_path, method: :delete %>
        <% end %>
      </div>
    </main>
  </body>
</html>
