<div class="max-w-md mx-auto p-4">
  <div class="flex justify-center p-4">
    <a href="<%= root_path %>">
      <% if Current.site %>
        <img src="<%= Current.site.logo.thumb.url %>" class="object-fill h-[60px]">
      <% else %>
        <img src="<%= asset_path 'logo.png' %>" class="object-fill h-[60px]">
      <% end %>
    </a>
  </div>

  <div class="border p-4 shadow rounded-xl bg-white">
    <h1 class="text-2xl mb-4">
      <%= t '.sign_up' %>
    </h1>

    <%= render 'sessions/auth_providers' %>

    <% if AUTH_PROVIDERS.include?('password') %>
      <%= render 'form' %>
    <% end %>

    <div class="mt-4">
      <a href="<%= sign_in_path %>" class="btn-text block w-full text-center">
        <%= t '.sign_in_existing_account' %>
      </a>
    </div>
  </div>
</div>
