<% cache [I18n.locale, topic] do %>
  <a class="list-item" href="<%= topic_path(topic) %>">
    <div class="list-item-avatar">
      <img src="<%= topic.user.avatar.thumb.url %>" class="avatar">
    </div>
    <div class="list-item-content">
      <div class="list-item-content-primary">
        <b class="text-secondary"><%= topic.forum.name %></b>
        <%= topic.title %>
      </div>
      <div class="list-item-content-secondary">
        <%= t '.created_by_at', name: topic.user.name %>
        <%= local_time_or_date topic.created_at %>
        <% if topic.posts.last %>
          Â·
          <%= t '.replied_by_at', name: topic.posts.last.user.name %>
          <%= local_time_or_date topic.posts.last.created_at %>
        <% end %>
      </div>
    </div>
    <div class="list-item-meta">
      <small class="text-secondary"><%= topic.posts_count %></small>
    </div>
  </a>
<% end %>
